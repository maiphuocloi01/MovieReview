<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/transparent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cover" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignBottom="@id/iv_cover"
            android:background="@drawable/bg_gradient" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_keyword"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_16sdp"
            tools:text="Doctor Strange in the Multiverse of Madness" />

        <TableRow
            android:id="@+id/layout_keyword"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_alignBottom="@id/iv_cover"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bg_key1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/light_black_50"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/tv_category11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:text="Action"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_10ssp" />


                </TableRow>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bg_key2"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/light_black_50"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/tv_category22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:text="Action"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_10ssp" />

                </TableRow>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bg_key3"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/light_black_50"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content">

                    <TextView
                        android:id="@+id/tv_category33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:text="Action"
                        android:paddingHorizontal="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_10ssp" />


                </TableRow>




            </androidx.cardview.widget.CardView>

        </TableRow>

        <!--<TextView
            android:id="@+id/tv_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_cover"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_12sdp"
            tools:text="Action, War" />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>
