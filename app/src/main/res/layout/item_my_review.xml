<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_6sdp"
    app:cardBackgroundColor="@color/light_black"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical">


        <TableRow android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:id="@+id/iv_avt"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_width="@dimen/_36ssp"
                android:layout_height="@dimen/_36ssp"
                app:strokeWidth="@dimen/_1sdp"
                android:padding="@dimen/_1sdp"
                app:strokeColor="@color/mid_black"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_avt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:text="Mai Phước Lợi"
                    android:textColor="@color/light_white"
                    android:textSize="@dimen/_11ssp" />

                <TableRow
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_marginStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="8"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_star"
                        android:layout_marginTop="1dp"
                        app:tint="@color/primary" />



                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:text="April 9, 2022"
                        android:textColor="@color/lighter_white"
                        android:textSize="@dimen/_9ssp" />

                </TableRow>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/iv_more"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/ic_more"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:tint="@color/light_white" />

        </TableRow>

        <!--<ru.embersoft.expandabletextview.ExpandableTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
