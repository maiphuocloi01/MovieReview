        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="3"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="@string/overview"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="@string/read_the_rest"
            android:textColor="@color/primary"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            android:id="@+id/layout_movie"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/transparent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@drawable/ic_movie2"
                    android:scaleType="centerCrop"
                    android:background="@color/mid_black_20"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/mid_black_40"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_movie_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctor Strange in the Multiverse of Madness"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/light_white"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/tv_overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/overview"
                            android:textSize="@dimen/_10ssp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/lighter_white"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_6sdp" />

                    </LinearLayout>



                </FrameLayout>

            </LinearLayout>




        </androidx.cardview.widget.CardView>



        <TableRow
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:id="@+id/layout_like"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_like"
                    app:tint="@color/light_white" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1.123"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/light_white"
                    android:layout_marginStart="@dimen/_4sdp"/>

            </TableRow>

            <TableRow
                android:id="@+id/layout_dislike"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_dislike"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_dislike"
                    app:tint="@color/light_white" />

                <TextView
                    android:id="@+id/tv_dislike"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1.123"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/light_white"
                    android:layout_marginStart="@dimen/_4sdp"/>

            </TableRow>

        </TableRow>



    </LinearLayout>


</androidx.cardview.widget.CardView>
