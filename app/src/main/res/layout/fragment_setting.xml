<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/dark"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_back"
            app:tint="@color/light_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Setting"
            android:textAlignment="center"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>


    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_light_dark_corner_20"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_14sdp">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/light_white" />

        <TextView
            android:id="@+id/tv_func1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Favorite"
            android:textColor="@color/light_white"
            android:textSize="18sp" />

        <View android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_forward"
            app:tint="@color/light_white" />

    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_light_dark_corner_20"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_14sdp">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:src="@drawable/ic_lock"
            app:tint="@color/light_white" />

        <TextView
            android:id="@+id/tv_func2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Change password"
            android:textColor="@color/light_white"
            android:textSize="18sp" />

        <View android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_forward"
            app:tint="@color/light_white" />

    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_light_dark_corner_20"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_14sdp">

        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/light_white" />

        <TextView
            android:id="@+id/tv_func3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Favorite"
            android:textColor="@color/light_white"
            android:textSize="18sp" />

        <View android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_forward"
            app:tint="@color/light_white" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </View>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_transparent_corner_10_border_primary"
        android:enabled="true"
        android:fontFamily="@font/roboto_bold"
        android:padding="12dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="@dimen/_14ssp" />



</LinearLayout>