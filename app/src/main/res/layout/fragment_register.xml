<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent">

    <TableRow android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:tint="@color/primary" />

        <View
            android:layout_height="1dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:srcCompat="@drawable/ic_logo_splash" />

        <View
            android:layout_height="1dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:visibility="invisible"
            android:layout_marginEnd="@dimen/_25sdp"
            app:tint="@color/light_white" />

        <!--<TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/light_white"
            android:text="VieWie"/>-->
    </TableRow>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_22sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_28sdp"
        android:fontFamily="@font/baloo_semibold"
        android:textColor="@color/light_white"
        android:text="Join Viewie"/>


    <com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@color/transparent"
        app:hintAnimationEnabled="false"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/light_white"
        android:id="@+id/layout_email"
        app:endIconTint="@color/light_white"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_selector_ver2"
            android:hint="Email"
            android:maxLength="35"
            android:inputType="text"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/light_white"
            android:textColorHint="@color/mid_white"
            android:drawableTint="@color/light_white"
            android:textSize="@dimen/_12ssp" />
    </com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout>

    <com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:background="@color/transparent"
        app:hintAnimationEnabled="false"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_profile"
        app:startIconTint="@color/light_white"
        android:id="@+id/layout_name"
        app:endIconTint="@color/light_white"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_selector_ver2"
            android:hint="Full name"
            android:inputType="text"
            android:maxLength="30"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/light_white"
            android:textColorHint="@color/mid_white"
            android:drawableTint="@color/light_white"
            android:textSize="@dimen/_12ssp" />
    </com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout>


    <com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:background="@color/transparent"
        app:hintAnimationEnabled="false"
        android:id="@+id/layout_password"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/light_white"
        app:passwordToggleTint="@color/light_white"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/text_input_selector_ver2"
            android:inputType="textPassword"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/light_white"
            android:textColorHint="@color/mid_white"
            android:drawableTint="@color/light_white"
            android:textSize="@dimen/_12ssp" />
    </com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout>

    <TextView
        android:id="@+id/tv_meter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weak"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_35sdp"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_10ssp" />

    <com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/transparent"
        app:hintAnimationEnabled="false"
        app:passwordToggleTint="@color/light_white"
        android:id="@+id/layout_password_confirm"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/light_white"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_selector_ver2"
            android:hint="Confirm password"
            android:drawableStart="@drawable/ic_lock"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/light_white"
            android:textColorHint="@color/mid_white"
            android:drawableTint="@color/light_white"
            android:textSize="@dimen/_12ssp" />
    </com.cnjava.moviereview.util.NoChangingBackgroundTextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/bg_primary_corner_15"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/baloo_semibold"
        android:stateListAnimator="@null"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/dark"
        android:textSize="@dimen/_16ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />


    <TableRow
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:gravity="center"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12ssp" />

    </TableRow>


</LinearLayout>