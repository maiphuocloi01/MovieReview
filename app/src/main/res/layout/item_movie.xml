<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="@dimen/_101sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_poster" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="1dp"
                android:layout_marginTop="@dimen/_150sdp"
                app:layout_anchorGravity="bottom"
                android:layout_height="@dimen/_16sdp"/>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                app:layout_anchor="@+id/card_poster"
                android:layout_marginBottom="-20dp"
                app:layout_anchorGravity="bottom|right"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_star_center"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_star"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="7.8"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_anchor="@+id/iv_star_center"
                    app:layout_anchorGravity="center"
                    android:textColor="@color/light_white"
                    android:textSize="@dimen/_7ssp" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Doctor Strange in the Multiverse of Madness"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:text="May 06, 2022"
            android:textColor="@color/light_white"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>


</LinearLayout>