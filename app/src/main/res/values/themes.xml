<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieReview" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/dark</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="SplashScreenStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="RatingBarSmall" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="RatingBarLarge" parent="android:style/Widget.Material.RatingBar">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="RatingBarMedium" parent="android:style/Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:textColorPrimary">@color/light_white</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:strokeColor">@color/colorRed</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordGoodAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorOrangeYellow</item>
        <item name="android:strokeColor">@color/colorOrangeYellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordStrongAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:strokeColor">@color/colorGreen</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>