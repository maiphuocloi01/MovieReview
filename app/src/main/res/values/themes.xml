<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieReview" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@null</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/dark</item>
        <item name="android:statusBarColor">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="VideoTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>


    <style name="RatingBarSmall" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="RatingBarLarge" parent="android:style/Widget.Material.RatingBar">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="RatingBarMedium" parent="android:style/Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">@color/light_black</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/light_white</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:textColorPrimary">@color/light_white</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:strokeColor">@color/colorRed</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordGoodAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorOrangeYellow</item>
        <item name="android:strokeColor">@color/colorOrangeYellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordStrongAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:strokeColor">@color/colorGreen</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.VieWie.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="Widget.VieWie.TextView.InfoTitle" parent="@style/Widget.VieWie.TextView">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:alpha">0.9</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.VieWie.TextView.InfoBody" parent="@style/Widget.VieWie.TextView">
        <item name="android:textColor">@color/lighter_white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">3</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.VieWie.TextView.Line" parent="@style/Widget.VieWie.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/lighter_white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.VieWie.TextView.Title" parent="@style/Widget.VieWie.TextView">
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.VieWie.TextView.Title.Clickable" parent="@style/Widget.VieWie.TextView.Title">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
    </style>

    <style name="Widget.VieWie.TextView.Title.Clickable.DetailContent" parent="@style/Widget.VieWie.TextView.Title.Clickable">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
    </style>

    <style name="Widget.VieWie.TextView.Line.Headline" parent="@style/Widget.VieWie.TextView.Line">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Moviebase.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.VieWie.TextView.Button" parent="@style/Widget.VieWie.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Moviebase.Button</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.VieWie.SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:editTextColor">@color/light_white</item>
        <item name="android:textColorHint">@color/mid_white</item>
    </style>

</resources>